<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Digital Hospital</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="row banner" style="background-color: #286090">
        <div class="col-md-12">
            <img class="img-responsive center-block" src="~/images/logo.png">
        </div>

    </div>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:aqua">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Digital Hospital", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (@Session["PatientName"] == null && @Session["Doctor_name"] == null)
                    {
                        <li>@Html.ActionLink("New Patient Sign up", "PatientSignupView", "Patient")</li>
                        <li>@Html.ActionLink("login", "LoginView", "Login")</li>
                    }
                    
                    
                   @if(@Session["PatientName"] != null)
                        {
                            <li style="padding-left:30em"><a href="../Login/LoginView">log out</a></li>
                            <li style="padding-left:00em"><a href="../Patient/PatientPrivatePage" class="text-center" style="color:black">Hi @Session["PatientName"]</a></li>
                        }
                        @if (@Session["Doctor_name"] != null)
                        {
                            <li style="padding-left:35em"><a href="../Login/LoginView">log out</a></li>
                            <li style="padding-left:00em"><a href="../Doctor/DoctorPrivatePage" class="text-center" style="color:black">Hi @Session["Doctor_name"]</a></li>

                        }
                    


                </ul>
            </div>
        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="text-align: center;background-color: #2a2730;color: #99979c;padding-top: 50px;padding-bottom: 50px; margin-top: 100px;">
            <p>&copy; @DateTime.Now.ToLocalTime() - Digital Hospital</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/JS")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/ImageScripts.js"></script>
</body>
</html>
