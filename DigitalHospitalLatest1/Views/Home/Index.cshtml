@{
    ViewBag.Title = "Home Page";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<title>OUR HOSPITAL</title>
<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">

<h2 style="background-color: lawngreen;color: black; text-align: center; font-style: oblique">OUR HOSPITAL</h2>
<fieldset>
    <legend style="font-family:Arial Black;color:blue"></legend>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div id="imageCarousel" class="carousel slide" data-interval="2000"
                     data-ride="carousel" data-pause="hover" data-wrap="true">

                    <ol class="carousel-indicators">
                        <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#imageCarousel" data-slide-to="1"></li>
                        <li data-target="#imageCarousel" data-slide-to="2"></li>
                        <li data-target="#imageCarousel" data-slide-to="3"></li>
                        <li data-target="#imageCarousel" data-slide-to="4"></li>
                        <li data-target="#imageCarousel" data-slide-to="5"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/images/picture1.jpg" class="img-responsive">
                            <div class="carousel-caption">
                                <h1></h1>
                                <p style="font-weight: bold; color:yellow;font-size:xx-large">CCU</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images/picture2.jpg" class="img-responsive">
                            <div class="carousel-caption">
                                <h1></h1>
                                <p style="font-weight: bold; color:yellow;font-size:xx-large">WARD</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images/picture3.jpg" class="img-responsive">
                            <div class="carousel-caption">
                                <h1></h1>
                                <p style="font-weight: bold; color:yellow;font-size:xx-large">MEDICAL SERVICES</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images/picture11.jpg" class="img-responsive">
                            <div class="carousel-caption">
                                <h1></h1>
                                <p style="font-weight: bold; color:yellow;font-size:xx-large">CABIN</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images/picture15.jpg" class="img-responsive">
                            <div class="carousel-caption">
                                <h1></h1>
                                <p style="font-weight: bold; color:yellow;font-size:xx-large">ICU</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images/Doctors1.jpg" class="img-responsive">
                            <div class="carousel-caption">
                                <h1></h1>
                                <p style="font-weight: bold; color:yellow;font-size:xx-large">DOCTORS</p>
                            </div>
                        </div>
                    </div>

                </div>

                <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
                    <span class="glyphicon glyphicon-hand-left"></span>
                </a>
                <a href="#imageCarousel" class="carousel-control right" data-slide="next">
                    <span class="glyphicon glyphicon-hand-right"></span>
                </a>
            </div>

        </div>
    </div>
</fieldset>
<footer>
    <p style="background-color: greenyellow; font-weight: bold; color:white; text-align: center; font-style: oblique">© @DateTime.Now.ToLocalTime()</p> @*Add Date Time*@
</footer>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
</script>
<script src="bootstrap/js/bootstrap.min.js"></script>

