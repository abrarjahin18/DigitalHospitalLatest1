@{
    ViewBag.Title = "New Patient Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <script src="~/Scripts/ImageScripts.js"></script>
    <script src="~/Content/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
<script type="text/javascript">

    
    function Save() {

        //alert('hgh');
        var Patient_info = {
            PatientName: $('#Patientname').val(),
            PatientEmail:$('#PatientEmail').val(),
            Phone: $('#PatientPhone').val(),
            Passward: $('#PatientPassword').val(),
            PatientGender: $('#PatientGender').val(),
            Age: $('#PatientAge').val(),
            Address:$('#PatientAddress').val()
        }
        $.ajax({
            url: "/Patient/savePatient",
            type: "POST",
            data: Patient_info,
            dataType: "JSON",
            success: function (result, status, xhr) {

                 if (result == 1) {
                    alert('Patient registered successfully');
                }
                else {
                    alert('not registered');
                }
                
            },
            error: function (req, status, errorObj) {
                alert(req.data);
                alert(status);
                alert(errorObj);
            }
        });
    }
    function cancel() {
         window.location = "/Home/Index";
    }
</script>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        
    </style>
</head>
<body>
    <h1> New Patient Registration</h1>
    <form class="form-horizontal">
        <div class="box-body">

            <div class="form-group">
                <label for="Patientname" class="col-sm-2 control-label">Patient Name</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Patientname" placeholder="Enter Name">
                </div>
            </div>
            <div class="form-group">
                <label for="PatientEmail" class="col-sm-2 control-label">Patient Email</label>

                <div class="col-sm-10">
                    <input type="email" class="form-control" id="PatientEmail" placeholder="Enter Email">
                </div>
            </div>
            <div class="form-group">
                <label for="PatientPhone" class="col-sm-2 control-label">Phone</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" id="PatientPhone" maxlength="11" placeholder="phone number">
                </div>
            </div>
            <div class="form-group">
                <label for="PatientPassword" class="col-sm-2 control-label">Password</label>

                <div class="col-sm-10">
                    <input type="password" class="form-control" id="PatientPassword" placeholder="Password">
                </div>
            </div>

            <div class="form-group">
                <label for="PatientAge" class="col-sm-2 control-label">Age</label>

                <div class="col-sm-10">
                    <input type="number" class="form-control" id="PatientAge" placeholder="enter age">
                </div>
            </div>
            <div class="form-group">
                <label for="PatientAddress" class="col-sm-2 control-label">Phone</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" id="PatientAddress" placeholder="Address">
                </div>
            </div>

            <div class="form-group">
                <label for="PatientGender" class="col-sm-2 control-label">Gender</label>
                <div class="col-sm-10">
                    <select id="PatientGender" name="role" class="form-control" required>
                        <option value="0" style="display: none;">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>

                    </select>
                    <div>
                        <span class="label label-danger">Please select a gender</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="imagePreview" class="col-sm-2 control-label">Photo</label>

                <div class="col-sm-10">
                    <img src="~/images/Add.png" style="margin:10px" height="200" width="200" id="imagePreview" />
                    <input type="file" name="ImageUpload" accept="image/jpeg, image/jpg, image/png" onchange="ShowImagePreview(this, document.getElementById('imagePreview')" />
                    <div>
                        <span class="label label-danger">Only jpeg ,jpg,png is supported</span>
                    </div>
                </div>
            </div>



            <!-- /.box-body -->
            <div class="box-footer">

                <button type="button" id="cancel" class="btn" onclick="cancel()">Cancel</button>
                <button type="submit" id="LogIn" class="btn btn-info center-block" onclick="Save()">save</button>

            </div>
            <!-- /.box-footer -->

        </div>
</form>
</body>
</html>
